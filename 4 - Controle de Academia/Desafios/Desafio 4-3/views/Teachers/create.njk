{% extends "layout.njk" %}

{% block content %}
  <form class="card" method="POST" action="/teachers">
    <section class="image"></section>
    <section class="details">
      <div class="title">Novo Professor</div>
      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input type="url" name="avatar_url" placeholder="https://">
        </div>
      <div class="item">
        <div>Nome completo</div>
        <div>
          <input type="text" name="name">
        </div>
      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input type="date" name="birth">
        </div>
      <div class="item">
        <div>Grau de escolaridade</div>
        <div>
          <select name="education_level">
            <option value="highschool">Ensino médio completo</option>
            <option value="undergradute">Ensino superior completo</option>
            <option value="master">Mestrado</option>
            <option value="doctorate">Doutorado</option>
          </select>
        </div>
      <div class="item">
        <div>Tipo de aula</div>
        <div>
          <span>
            <input type="radio" name="class_type" id="present" value="present" checked>
            Presencial
          </span>
          <span>
            <input type="radio" name="class_type" id="online" value="online">
            Online
          </span>
        </div>
      <div class="item">
        <div>Área de atuação</div>
        <div>
          <input type="text" name="acting_field">
        </div>
      </div>
      <button type="submit">Salvar</button>
    </section>
  </form>
{% endblock %}